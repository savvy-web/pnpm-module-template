{
	"$schema": "https://turborepo.com/schema.v2.json",
	"globalPassThroughEnv": ["GITHUB_ACTIONS", "CI"],
	"tasks": {
		"build:dev": {
			"cache": true,
			"dependsOn": ["types:check"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"$TURBO_ROOT$/package.json",
				"$TURBO_ROOT$/pnpm-lock.yaml",
				"$TURBO_ROOT$/pnpm-workspace.yaml",
				"!**/*.test.ts",
				"!**/*.spec.ts",
				"!**/*.md",
				"!.changeset/**",
				"!.claude/**",
				"!.github/**",
				"!.husky/**",
				"!.vscode/**"
			],
			"outputLogs": "full",
			"outputs": ["dist/dev/**", ".rslib/declarations/dev/**"]
		},
		"build:prod": {
			"cache": true,
			"dependsOn": ["types:check"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"$TURBO_ROOT$/package.json",
				"$TURBO_ROOT$/pnpm-lock.yaml",
				"$TURBO_ROOT$/pnpm-workspace.yaml",
				"!**/*.test.ts",
				"!**/*.spec.ts",
				"!**/*.md",
				"!.changeset/**",
				"!.claude/**",
				"!.github/**",
				"!.husky/**",
				"!.vscode/**"
			],
			"outputLogs": "full",
			"outputs": ["dist/npm/**", ".rslib/declarations/npm/**"]
		},
		"types:check": {
			"cache": true,
			"dependsOn": [],
			"inputs": [
				"$TURBO_DEFAULT$",
				"!**/*.md",
				"!.changeset/**",
				"!.claude/**",
				"!.github/**",
				"!.husky/**",
				"!.vscode/**"
			],
			"outputLogs": "errors-only",
			"outputs": []
		}
	}
}
